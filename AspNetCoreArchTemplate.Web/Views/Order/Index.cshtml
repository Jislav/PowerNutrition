@using PowerNutrition.Web.ViewModels.Order;
@model IEnumerable<UserOrderHistoryViewmodel>
@{
    ViewData["Title"] = "Order History";
}

@if(Model.Count() == 0)
{
    <h1 style="text-align: center">You haven't made any purchases yet!</h1>
}
else
{
    foreach(var order in Model)
    {
        <div>
            <p>Address: @order.Address</p>
            <p>City: @order.City</p>
            <p>PostCode: @order.PostCode</p>
            <p>PhoneNumber: @order.PhoneNumber</p>
            <p>OrderStatus: @order.OrderStatus</p>
        </div>
    }
}
