@using PowerNutrition.Web.ViewModels.Supplement;
@model IEnumerable<AllSupplementsViewmodel>
@{
    ViewData["Title"] = "Supplements";
}

<h2 class="text-2xl font-semibold mb-4">All Supplements</h2>

<div class="flex flex-wrap gap-6 justify-start">
    @foreach (var supplement in Model)
    {
        <div class="flex-none w-48 border rounded shadow p-4 text-sm bg-white">
            <img src="@supplement.ImageUrl" alt="@supplement.Name"
                 class="w-full h-32 object-contain mb-3 rounded border border-gray-300" />
            <h3 class="font-semibold text-lg leading-tight">@supplement.Name</h3>
            <p class="text-gray-700 mt-1">Brand: @supplement.Brand</p>
            <p class="text-gray-600 mt-1">Category: @supplement.Category</p>
            <p class="text-gray-800 font-semibold mt-2">$@supplement.Price</p>
            <p class="text-gray-600 mt-1">Stock: @supplement.Quantity</p>
            <a asp-controller="Supplement" asp-action="Details" asp-route-id="@supplement.Id"
               class="inline-block mt-3 px-3 py-1 text-sm bg-blue-600 text-white rounded hover:bg-blue-700">
                Details
            </a>
            <div class="mt-3 flex gap-2">
                <a asp-controller="Supplement" asp-action="Details" asp-route-id="@supplement.Id"
                   class="w-full px-3 py-1 text-sm bg-blue-600 rounded hover:bg-blue-700 text-center block">
                    Details
                </a>

                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="flex-1">
                    <input type="hidden" name="supplementId" value="@supplement.Id" />
                    <button type="submit"
                            class="w-full px-3 py-1 text-sm bg-green-600 rounded hover:bg-green-700">
                        Add to Cart
                    </button>
                </form>
            </div>
        </div>
    }
</div>
