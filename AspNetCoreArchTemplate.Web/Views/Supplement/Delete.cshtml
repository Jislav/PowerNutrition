@using PowerNutrition.Web.ViewModels.Supplement
@model SupplementDeleteInputModel
@{
    ViewData["Title"] = "Confirm Delete";
}
<h2 style="font-size: 48px; text-align:center">Confirm Delete</h2>

<div style="border:4px solid red">
    <p style="font-size:24px">
        Are you sure you want to delete @Model.Name?
    </p>
    <div>
        <a asp-page="/Manage/Delete" class="btn btn-secondary">Cancel</a>

        <form style="flex: 1" asp-controller="Supplement" asp-action="Delete" method="post">
            <input asp-for="Id" type="hidden" />
            <input asp-for="Name" type="hidden" />
            <button type="submit" class="btn btn-danger">Confirm</button>
        </form>
    </div>
    <p>
        NOTE: Every supplement from this category will also be deleted
    </p>
</div>
